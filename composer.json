{
    "name": "payone-gmbh/pcp-serversdk-php",
    "type": "library",
    "description": "PHP SDK to communicate with the PAYONE Commerce Platform server-to-server API",
    "keywords": ["SDK"],
    "license": "MIT",
    "authors": [
        {
            "name": "PAYONE GmbH"
        }
    ],
    "require": {
        "php": "~8.1||~8.2||~8.3",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.59"
    },
    "autoload": {
        "psr-4": {
            "PayoneCommercePlatform\\Sdk\\": ["src/PayoneCommercePlatform/Sdk", "lib/PayoneCommercePlatform/Sdk"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PayoneCommercePlatform\\Sdk\\": ["tests/PayoneCommercePlatform/Sdk"]
        }
    },
    "scripts": {
      "demo": "php ./examples/demo-app/index.php",
      "test": "phpunit tests",
      "coverage": "XDEBUG_MODE=coverage phpunit --coverage-text",
      "coverage-report": "XDEBUG_MODE=coverage phpunit --coverage-html=coverage"
    }
}
